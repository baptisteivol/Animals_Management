<%- include('partials/header') %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (animal) { %>
        <form class="add-animal-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= animal.name %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="favorite_color">Favorite Color</label>
                    <input type="test" class="form-control" name="favorite_color" id="favorite_color" placeholder="Favorite Color" value="<%= animal.favorite_color %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="type">Type</label>
                    <select id="type" name="type" class="form-control" required>
                        <option selected><%= animal.type %></option>
                        <option>Cats</option>
                        <option>Dogs</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Animal</button>
        </form>
    <% } else { %>
        <p class="text-center">Animal Not Found. Go <a href="/add">here</a> to add animals.</p>
    <% } %>
</div>
</div>
</body>
</html>
